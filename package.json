{
  "name": "streaming-next",
  "private": true,
  "version": "1.7.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "test:run": "vitest --run",
    "test:dev": "vitest",
    "test:ui": "vitest --ui",
    "check": "vue-tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:staged": "lint-staged",
    "preinstall": "bunx only-allow bun",
    "postinstall": "bunx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run check && bun run lint:staged && bun run test:run"
  },
  "lint-staged": {
    "**/*.{mjs,js,mts,ts,vue}": [
      "eslint"
    ]
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.9",
    "core-js": "^3.40.0",
    "lodash": "^4.17.21",
    "mitt": "^3.0.1",
    "moment": "^2.30.1",
    "moment-duration-format": "^2.3.2",
    "mousetrap": "^1.6.5",
    "pinia": "^3.0.1",
    "roboto-fontface": "^0.10.0",
    "toastr": "^2.1.4",
    "uuid": "^11.1.0",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.1",
    "vuetify": "^3.7.13"
  },
  "devDependencies": {
    "@babel/types": "^7.26.9",
    "@eslint/js": "^9.21.0",
    "@pinia/testing": "^1.0.0",
    "@types/chrome": "^0.0.306",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/lodash": "^4.17.15",
    "@types/moment-duration-format": "^2.2.6",
    "@types/mousetrap": "^1.6.15",
    "@types/node": "^22.13.5",
    "@types/toastr": "^2.1.43",
    "@types/uuid": "^10.0.0",
    "@types/webextension-polyfill": "^0.12.2",
    "@vitejs/plugin-vue": "^5.2.1",
    "@vitest/browser": "^3.0.6",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/ui": "^3.0.6",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.7.0",
    "@webext-core/fake-browser": "^1.3.2",
    "@webext-core/storage": "^1.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^9.32.0",
    "eslint-plugin-vuetify": "^2.5.1",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "jsdom-global": "^3.0.2",
    "lint-staged": "^15.4.3",
    "playwright": "^1.50.1",
    "prettier": "^3.5.2",
    "resize-observer-polyfill": "^1.5.1",
    "sass": "^1.85.0",
    "simple-git-hooks": "^2.11.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.1",
    "unplugin-auto-import": "^19.1.0",
    "unplugin-fonts": "^1.3.1",
    "unplugin-vue-components": "^28.4.0",
    "vite": "^6.1.1",
    "vite-plugin-vuetify": "^2.1.0",
    "vite-plugin-web-extension": "^4.4.3",
    "vitest": "^3.0.6",
    "vitest-browser-vue": "^0.2.0",
    "vitest-chrome": "^0.1.0",
    "vue-tsc": "^2.2.2",
    "webextension-polyfill": "^0.12.0"
  }
}
